@using ASP.HolidayRental.Models
@using Microsoft.AspNetCore.Mvc.ModelBinding
@model MembreLogin

@{ 
    ViewData["Titre"] = "Login";
}

<h3>Login</h3>


<div class="row">
   <div class="col-md-4">
       <form class="" role="form">
           <div class="form-group">
                <label class="sr-only" for="Idantifiant">Identifiant</label>
                <input type="text" class="form-control" id="mail" placeholder="dupond@gmail.com">
           </div>
           <div class="form-group">
                 <label class="sr-only" for="motDePasse">Mot de passe</label>
                 <input type="text" class="form-control" id="motDePasse" placeholder="*****">
           </div>
                 <button type="submit" class="btn btn-success">Connexion</button>
       </form>
   </div>
</div>

@section Scripts {
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}